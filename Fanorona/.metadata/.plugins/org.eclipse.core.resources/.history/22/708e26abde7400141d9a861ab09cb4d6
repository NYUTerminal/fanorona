package Logic;

public class Piece {

	private int row;

	private int col;
	
	private boolean isBlack;

	public int getRow() {
		return row;
	}

	public void setRow(int row) {
		this.row = row;
	}

	public int getCol() {
		return col;
	}

	public void setCol(int col) {
		this.col = col;
	}

	public int[] getPosition() {
		int[] position = new int[2];
		position[0] = row;
		position[1] = col;
		return position;
	}

	public boolean isBlack() {
		return isBlack;
	}

	public void setBlack(boolean isBlack) {
		this.isBlack = isBlack;
	}
	
	public int movePieceToLeft(int minRow){
		if(row>minRow){
			Case newCase = new Case(casepiece.getCol()-1,casepiece.getRow());
			this.setCasepiece(newCase);
		}
		return 0;
	}
	public int movePieceToRight(int maxRow){
		if(col<Case.MAXCOL){
			Case newCase = new Case(casepiece.getCol()+1,casepiece.getRow());
			this.setCasepiece(newCase);
		}
		return 0;
	}
	public int movePieceToUp(int maxCol){
		if(col<Case.MAXROW){
			Case newCase = new Case(casepiece.getCol(),casepiece.getRow()+1);
			this.setCasepiece(newCase);
		}
		return 0;
	}
	public int movePieceToDown(int minCol){
		if(col>Case.MINROW){
			Case newCase = new Case(casepiece.getCol(),casepiece.getRow()-1);
			this.setCasepiece(newCase);
		}
		return 0;
	}

}
