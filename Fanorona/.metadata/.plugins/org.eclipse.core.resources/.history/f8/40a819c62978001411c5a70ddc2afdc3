package Logic;

public class BoardProperties {

	public static int MAX_ROW;

	public static int MAX_COL;

	public static Color playerColor;

	public static Color compColor;

	private static BoardProperties boardProperties;

	private BoardProperties() {

	}

	public synchronized static BoardProperties getInstance() {
		if (boardProperties == null)
			boardProperties = new BoardProperties();
		return boardProperties;
	}

	public static int getMAX_ROW() {
		return MAX_ROW;
	}

	public static void setMAX_ROW(int mAX_ROW) {
		MAX_ROW = mAX_ROW;
	}

	public static int getMAX_COL() {
		return MAX_COL;
	}

	public static void setMAX_COL(int mAX_COL) {
		MAX_COL = mAX_COL;
	}

	public static Color getPlayerColor() {
		return playerColor;
	}

	public static void setPlayerColor(Color playerColor) {
		BoardProperties.playerColor = playerColor;
	}

	public static Color getCompColor() {
		return compColor;
	}

	public static void setCompColor(Color compColor) {
		BoardProperties.compColor = compColor;
	}


}
